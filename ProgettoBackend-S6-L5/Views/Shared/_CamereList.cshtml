@model CamereViewModel

@if (Model.Camere != null && Model.Camere.Count() > 0)
{
	<table id="camereTable" class="table table-striped table-hover table table-bordered">
		<thead class="text-center">
		<th>Numero</th>
		<th>Tipo</th>
		<th>Prezzo</th>
		<th>Actions</th>
		</thead>
		<tbody class="text-center">
			@foreach (var camera in Model.Camere)
			{
				<tr>
					<td>@camera.Numero</td>
					<td>@camera.Tipo</td>
					<td>€ @camera.Prezzo</td>
					<td>
						<button class="btn btn-sm btn-warning"
						@(User.IsInRole("DipendenteBase") ? "disabled" : "")
								onclick="showEditModal('@camera.CameraId')">
							Modifica
						</button>

						<button class="btn btn-sm btn-danger"
						@(User.IsInRole("DipendenteBase") ? "disabled" : "")
								onclick="showDeleteModal('@camera.CameraId')">
							Elimina
						</button>

					</td>

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p class="text-danger text-center">Nessuna camera presente.</p>
}

