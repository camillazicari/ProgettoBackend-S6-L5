@model DipendenteViewModel

@if (Model.Dipendenti != null && Model.Dipendenti.Count() > 0)
{
    <table id="dipendentiTable" class="table table-striped table-hover table-bordered">
        <thead class="text-center">
        <th>Nome</th>
        <th>Cognome</th>
        <th>Data di Nascita</th>
        <th>Ruolo</th>
        </thead>
        <tbody class="text-center">
            @foreach (var dipendente in Model.Dipendenti)
            {
                <tr>
                    <td>@dipendente.User.FirstName</td>
                    <td>@dipendente.User.LastName</td>
                    <td>@dipendente.User.BirthDate?.ToString("dd/MM/yyyy")</td>
                    <td>@dipendente.Role</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger text-center">Nessun dipendente presente.</p>
}

