@model List<DipendenteViewModel>

@if (Model != null && Model.Count > 0)
{
    <table id="dipendentiTable" class="table table-striped table-hover table-bordered">
        <thead class="text-center">
            <tr>
                <th>Nome</th>
                <th>Cognome</th>
                <th>Data di Nascita</th>
                <th>Ruolo</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var dipendente in Model)
            {
                <tr>
                    <td>@dipendente.FirstName</td>
                    <td>@dipendente.LastName</td>
                    <td>@dipendente.BirthDate?.ToString("dd/MM/yyyy")</td>
                    <td>@dipendente.Ruolo</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger text-center">Nessun dipendente presente.</p>
}
