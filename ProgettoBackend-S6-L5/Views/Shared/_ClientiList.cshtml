@model ClientiViewModel

@if (Model.Clienti != null && Model.Clienti.Count() > 0)
{
	<table id="clientiTable" class="table table-striped table-hover table table-bordered">
		<thead class="text-center">
		<th>Nome</th>
		<th>Cognome</th>
		<th>Email</th>
		<th>Telefono</th>
		<th>Actions</th>
		</thead>
		<tbody class="text-center">
			@foreach (var cliente in Model.Clienti)
			{
				<tr>
					<td>@cliente.Nome</td>
					<td>@cliente.Cognome</td>
					<td>@cliente.Email</td>
					<td>@cliente.Telefono</td>
					<td>
						<button class="btn btn-sm btn-warning"
						@(User.IsInRole("DipendenteBase") ? "disabled" : "")
								onclick="showEditModal('@cliente.ClienteId')">
							Modifica
						</button>

						<button class="btn btn-sm btn-danger"
						@(User.IsInRole("DipendenteBase") ? "disabled" : "")
								onclick="showDeleteModal('@cliente.ClienteId')">
							Elimina
						</button>

					</td>

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p class="text-danger text-center">Nessun cliente presente.</p>
}
