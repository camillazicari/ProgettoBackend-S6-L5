@model PrenotazioniViewModel

@if (Model.Prenotazioni != null && Model.Prenotazioni.Count() > 0)
{
	<table id="prenotazioniTable" class="table table-striped table-hover table table-bordered">
		<thead class="text-center">
		<th>Numero Camera</th>
		<th>Data di inizio</th>
		<th>Data di fine</th>
		<th>Stato</th>
		<th>Email del cliente</th>
		<th>Telefono del cliente</th>
		<th>Actions</th>
		</thead>
		<tbody class="text-center">
			@foreach (var prenotazione in Model.Prenotazioni)
			{
				<tr>
					<td>@prenotazione.Camera.Numero</td>
					<td>@prenotazione.DataInizio</td>
					<td>@prenotazione.DataFine</td>
					<td>@prenotazione.Stato</td>
					<td>@prenotazione.Cliente.Email</td>
					<td>@prenotazione.Cliente.Telefono</td>
					<td>
						<button class="btn btn-sm btn-warning"
						@(User.IsInRole("DipendenteBase") ? "disabled" : "")
								onclick="showEditModal('@prenotazione.PrenotazioneId')">
							Modifica
						</button>

						<button class="btn btn-sm btn-danger"
						@(User.IsInRole("DipendenteBase") ? "disabled" : "")
								onclick="showDeleteModal('@prenotazione.PrenotazioneId')">
							Elimina
						</button>
					</td>

				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p class="text-danger text-center">Nessuna prenotazione presente.</p>
}
